<div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm hover-shadow product-card">
        <div class="position-relative">
            <a href="#" class="product-link" data-product-id="<%= product._id %>">
                <img src="<%= product.images && product.images.length > 0 ? product.images[0] : '/images/placeholder.jpg' %>" 
                    class="card-img-top product-image" 
                    alt="<%= product.name %>"
                    onerror="this.onerror=null; this.src='https://via.placeholder.com/300x200?text=No+Image'">
                <% if (product.stock === 0) { %>
                    <div class="position-absolute top-0 end-0 m-2">
                        <span class="badge bg-secondary">Out of Stock</span>
                    </div>
                <% } %>
            </a>
        </div>
        <div class="card-body">
            <h5 class="card-title text-truncate product-title">
                <a href="#" class="product-link text-decoration-none text-dark" data-product-id="<%= product._id %>">
                    <%= product.name %>
                </a>
            </h5>
            <p class="card-text text-truncate"><%= product.description %></p>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="h5 mb-0 product-price">â‚¹<%= product.price.toFixed(2) %></span>
                </div>
            </div>
            <div class="mt-2">
                <small class="text-muted product-seller">
                    <i class="fas fa-store me-1"></i>
                    <%= product.seller ? product.seller.companyName : 'Unknown Seller' %>
                </small>
            </div>
            <div class="mt-3">
                <a href="#" class="btn btn-primary w-100 product-link" data-product-id="<%= product._id %>">View Details</a>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add click event listeners to all product links
    document.querySelectorAll('.product-link').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault(); // Prevent default navigation
            const productId = this.getAttribute('data-product-id');
            console.log('Product clicked:', productId);
            
            // Log the click event details
            console.log({
                type: 'Product Click',
                productId: productId,
                element: this.tagName,
                class: this.className,
                timestamp: new Date().toISOString()
            });

            // Navigate to the product page after logging
            window.location.href = `/prod/${productId}`;
        });
    });
});
</script> 